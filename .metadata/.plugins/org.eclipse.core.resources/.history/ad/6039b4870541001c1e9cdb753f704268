package com.springmybatis.board.dao;

import org.apache.ibatis.session.SqlSession;

import com.springmybatis.board.vo.BoardVO;
import com.springmybatis.util.SqlSessionFactoryBean;

public class BoardDAO {
	private SqlSession mybatis;
	
	public BoardDAO() {
		mybatis = SqlSessionFactoryBean.getSqlSessionInstance();
	}
	public void insertBoard(BoardVO vo) {
		mybatis.insert("BoardDAO.insertBoard",vo);
		mybatis.commit();
	}
	public void updateBoard(BoardVO vo) {
		mybatis.insert("BoardDAO.updateBoard",vo);
		mybatis.commit();
	}
	public void deleteBoard(BoardVO vo) {
		mybatis.insert("BoardDAO.deleteBoard",vo);
		mybatis.commit();
	}
	public void insertBoard(BoardVO vo) {
		mybatis.insert("BoardDAO.insertBoard",vo);
		mybatis.commit();
	}
}
